<STYLE TYPE="text/css">
.ymaps_balloon{
	color: #000000;
	width: 275px;
	padding-bottom:15px;
	font-size: 8pt;
	font-family: Tahoma;
	line-height:14px;
}
</STYLE>

<script src="http://api-maps.yandex.ru/2.0/?coordorder=longlat&load=package.full&mode=debug&lang=ru-RU" type="text/javascript"></script>
<script type="text/javascript" src="http://arh.minigis.net/jscript/map_styles2.js"></script>
<script type="text/javascript">
	ymaps.ready(display_locations);
	function display_locations(){
		map = new ymaps.Map("YMapsID", {
			center: [40.6013,64.5469],
			zoom: 12,
			type: 'yandex#satellite',
			behaviors: ["scrollZoom","drag"]
		});
		map.controls.add('mapTools');
		for (a in userstyles){
			ymaps.option.presetStorage.add(a,userstyles[a]);
		}
		ms = new ymaps.GeoObjectArray();
		var genericBalloon = ymaps.templateLayoutFactory.createClass(
			'<div class="ymaps_balloon">' +
			'<b>Название:</b> $[properties.name|без имени]<br><b>Адрес:</b> $[properties.address|нет]<br>' +
			'<b>Описание</b> $[properties.description|без описания]' +
			'</div></div>'
		);
		ymaps.layout.storage.add('generic#balloonLayout', genericBalloon);
		ms.options.set({
			balloonContentBodyLayout: 'generic#balloonLayout',
			balloonMaxWidth: 300// Максимальная ширина балуна в пикселах
		});
		object = new ymaps.Circle(new ymaps.geometry.Circle([40.532309687805146, 64.53817511698394],100), {address: "Не указан", description: "Объект", name: "Название"},{ preset: "circle#default" });
ms.add(object);
object = new ymaps.Circle(new ymaps.geometry.Circle([40.56286541290279, 64.53677115551679],100), {address: "Не указан", description: "Объект", name: "Название"},{ preset: "circle#default" });
ms.add(object);
object = new ymaps.Circle(new ymaps.geometry.Circle([40.55926052398679, 64.54401186439014],100), {address: "Не указан", description: "Объект", name: "Название"},{ preset: "circle#default" });
ms.add(object);
object = new ymaps.Circle(new ymaps.geometry.Circle([40.540721095275856, 64.54733603426027],100), {address: "Не указан", description: "Объект", name: "Название"},{ preset: "circle#default" });
ms.add(object);		map.geoObjects.add(ms);
	}
</script>
<div id="YMapsID" style="width:100%;height:98%;border:1px solid #FFFFFF;margin:0px;"></div>
