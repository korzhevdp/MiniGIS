<STYLE TYPE="text/css">
.ymaps_balloon{
	color: #000000;
	width: 275px;
	padding-bottom:15px;
	font-size: 8pt;
	font-family: Tahoma;
	line-height:14px;
}
</STYLE>

<script src="http://api-maps.yandex.ru/2.0/?coordorder=longlat&load=package.full&mode=debug&lang=ru-RU" type="text/javascript"></script>
<script type="text/javascript" src="http://arh.minigis.net/jscript/map_styles2.js"></script>
<script type="text/javascript">
	ymaps.ready(display_locations);
	function display_locations(){
		map = new ymaps.Map("YMapsID", {
			center: [40.5311,64.5419],
			zoom: 15,
			type: 'yandex#map',
			behaviors: ["scrollZoom","drag"]
		});
		map.controls.add('mapTools');
		for (a in userstyles){
			ymaps.option.presetStorage.add(a,userstyles[a]);
		}
		ms = new ymaps.GeoObjectArray();
		var genericBalloon = ymaps.templateLayoutFactory.createClass(
			'<div class="ymaps_balloon">' +
			'<b>Название:</b> $[properties.name|без имени]<br><b>Адрес:</b> $[properties.address|нет]<br>' +
			'<b>Описание</b> $[properties.description|без описания]' +
			'</div></div>'
		);
		ymaps.layout.storage.add('generic#balloonLayout', genericBalloon);
		ms.options.set({
			balloonContentBodyLayout: 'generic#balloonLayout',
			balloonMaxWidth: 300// Максимальная ширина балуна в пикселах
		});
		object = new ymaps.Placemark({type: "Point",coordinates: [40.55309804943191,64.54700705882715]},{address: "Воскресенская д.95", description: "Отдел экологии", name: "Департамент экономики"},{ preset: "twirl#houseIcon" });
ms.add(object);
object = new ymaps.Placemark({type: "Point",coordinates: [40.51535287753088,64.5436437571031]},{address: "Троицкий, д. 61", description: "Объект", name: "Администрация Октябрьского округа"},{ preset: "twirl#houseIcon" });
ms.add(object);
object = new ymaps.Placemark({type: "Point",coordinates: [40.51785718836718,64.53788687824002]},{address: "Не указан", description: "Объект", name: "Название"},{ preset: "twirl#buildingsIcon" });
ms.add(object);
object = new ymaps.Polyline(new ymaps.geometry.LineString.fromEncodedCoordinates("ZEBqAhfF2AM0igAApyMAAA=="),{address: "Не указан", description: "Собственная линия", name: "DSL"},{ preset: "routes#xdsl" });
ms.add(object);		map.geoObjects.add(ms);
	}
</script>
<div id="YMapsID" style="width:100%;height:98%;border:1px solid #FFFFFF;margin:0px;"></div>
