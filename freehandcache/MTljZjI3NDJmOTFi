<script type="text/javascript">
	ymaps.ready(display_locations);
	function display_locations(){
		map = new ymaps.Map("YMapsID", {
			center: [40.56407755,64.52889749],
			zoom: 16,
			type: 'base#arch',
			behaviors: ["scrollZoom", "drag", "dblClickZoom"]
		});
		map.controls.add('mapTools').add('zoomControl');
		for (a in userstyles){
			ymaps.option.presetStorage.add(a, userstyles[a]);
		}
		ms = new ymaps.GeoObjectArray();
		var genericBalloon = ymaps.templateLayoutFactory.createClass(
			'<div class="ymaps_balloon">' +
			'<b>Название:</b> $[properties.name|без имени]<br><b>Адрес:</b> $[properties.address|нет]<br>' +
			'<b>Описание:</b> $[properties.description|без описания]' +
			'</div></div>'
		);
		ymaps.layout.storage.add('generic#balloonLayout', genericBalloon);
		ms.options.set({
			balloonContentBodyLayout: 'generic#balloonLayout',
			balloonMaxWidth: 300// Максимальная ширина балуна в пикселах
		});
		object = new ymaps.Polyline(new ymaps.geometry.LineString.fromEncodedCoordinates('DTVrAmeX2APnAQAAQQQAABH0__8nAQAAKeL__7oCAABu9P__WwEAANv3___RAAAA8-b__0oEAAAg-f__Rfr__w=='), {address: 'Ленинградский проспект, 21', description: 'Ленинградский проспект, 21', name: 'трамвайный путь в депо', hasHint: 1, hintContent: 'трамвайный путь в депо Ленинградский проспект, 21', link: '' }, ymaps.option.presetStorage.get('metro#orange'));
ms.add(object);
object = new ymaps.Polyline(new ymaps.geometry.LineString.fromEncodedCoordinates('i9lqAkag2AOU-f__9Pr__6n-__9X____Wc7__4wIAADc-P__VgEAAFf1__9PAgAA4fD__7gDAAA0_f__6AAAALrb__90DAAArOn__8sHAACM-v__BwIAAKb9__9PAQAAYvv__9cDAACb____VgEAAOr-__8UBgAAAQAAACQBAACaKAAA0UsAAKYAAADkAAAAEgEAAM0AAAAKFQAAyggAAOMIAADm-___duv__xL3___1_f__twAAAAr6__9WAgAAgv7__yYAAACh_v__s____w=='), {address: 'улица Урицкого, 6', description: 'Ул Архиерейская (Урицкого) - Набережная - Троицкий проспект - ул. Лопарская (Комсомольская) - Средний проспект', name: 'Трамвайный маршрут по городу', hasHint: 1, hintContent: 'Трамвайный маршрут по городу Ул Архиерейская (Урицкого) - Набережная - Троицкий проспект - ул. Лопарская (Комсомольская) - Средний проспект', link: 'https://upload.wikimedia.org/wikipedia/commons/1/1c/%D0%A2%D1%80%D0%B0%D0%BC%D0%B2%D0%B0%D0%B9%D0%BD%D1%8B%D0%B5_%D0%BC%D0%B0%D1%80%D1%88%D1%80%D1%83%D1%82%D1%8B-%D0%90%D1%80%D1%85%D0%B0%D0%BD%D0%B3%D0%B5%D0%BB%D1%8C%D1%81%D0%BA-1916.jpg' }, ymaps.option.presetStorage.get('metro#skyblue'));
ms.add(object);		map.geoObjects.add(ms);
